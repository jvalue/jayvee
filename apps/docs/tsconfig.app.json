{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "types": ["node"],
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": false
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "docusaurus.config.ts", "sidebars.ts"],
  "types": [
    "node",
    "@docusaurus/module-type-aliases",
    "@docusaurus/theme-classic"
  ],
  "baseUrl": ".",
  "paths": {
    "@site/*": ["./*"]
  }
}
