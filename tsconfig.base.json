{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES2017"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@jayvee/language-server": ["libs/language-server/src/index.ts"],
      "@jayvee/monaco-editor": ["libs/monaco-editor/src/index.ts"]
    }
  }
}
