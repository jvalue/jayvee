{
  "name": "language-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/language-server/src",
  "projectType": "library",
  "targets": {
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "langium generate -f libs/language-server/langium-config.json",
          // Workaround until https://github.com/langium/langium/issues/740 is resolved:
          "node tools/scripts/fix-monarch-grammar-escape.mjs"
        ],
        "parallel": false
      }
    },
    "build": {
      "dependsOn": ["generate"],
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/language-server",
        "main": "libs/language-server/src/index.ts",
        "tsConfig": "libs/language-server/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/language-server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/language-server/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "pre-publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": [
          "node tools/scripts/relax-peer-dependency-versions.mjs @jvalue/language-server"
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["pre-publish"],
      "options": {
        "commands": [
          "node tools/scripts/publish.mjs @jvalue/language-server"
        ]
      }
    },
    "pack": {
      "executor": "nx:run-commands",
      "dependsOn": ["pre-publish"],
      "options": {
        "commands": [
          "node tools/scripts/pack.mjs @jvalue/language-server"
        ]
      }
    }
  },
  "tags": []
}
